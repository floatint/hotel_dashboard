<Application x:Class="HotelDashboard.WPFClient.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HotelDashboard.WPFClient"
             StartupUri="Views/MainWindow.xaml">
    <!-- Ресурсы приложения -->
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="WebApiSettings.xaml"/>
                <ResourceDictionary Source="UISettings.xaml"/>
                <ResourceDictionary Source="AppSettings.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
